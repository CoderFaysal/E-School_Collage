<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Madrasah" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>



    <style name="NOTICE">
        <item name="android:background">@color/night</item>
    </style>

    <style name="MAQUUEE">
        <item name="android:background">@drawable/marquee_text_bg_night</item>
    </style>

    <style name="TEXT_COLOR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ICON_COLOR">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CARD_BACKGROUND">
        <item name="android:background">@color/night</item>
    </style>

    <style name="MAIN_BACKGROUND">
        <item name="android:background">@color/black</item>
    </style>

    <style name="VIEW_BACKGROUND">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BACKGROUND_SHAP">
        <item name="android:background">@color/night</item>
    </style>

    <style name="TEXT_BACKGROUND_SHAP">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/night</item>
    </style>

    <style name="FAV">
        <item name="android:backgroundTint">@color/night</item>
    </style>




</resources>