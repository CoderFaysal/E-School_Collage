<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Contact">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/menu_contact"
            />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:layout_marginLeft="-50dp"
            style="@style/ICON_COLOR"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            />
    </LinearLayout>
    <View
        android:id="@+id/dividar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/VIEW_BACKGROUND"
        android:layout_below="@id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/dividar"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="10dp"
                style="@style/CARD_BACKGROUND"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:src="@drawable/ic_call"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    style="@style/ICON_COLOR"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="25dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+8801892837253"
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="10dp"
                style="@style/CARD_BACKGROUND"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:src="@drawable/ic_mail"
                    android:layout_gravity="top"
                    android:layout_marginTop="3dp"
                    style="@style/ICON_COLOR"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="25dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="developerfaysal64@gmail.com"
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="10dp"
                style="@style/CARD_BACKGROUND"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:src="@drawable/ic_map"
                    android:layout_gravity="top"
                    android:layout_marginTop="3dp"
                    style="@style/ICON_COLOR"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginLeft="25dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shariatpur, Dhaka, Bangladesh."
                        android:textSize="16sp"
                        style="@style/TEXT_COLOR"
                        />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect Social Media -"
                android:textSize="16sp"
                style="@style/TEXT_COLOR"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call"
                        android:padding="14dp"
                        android:background="@drawable/round_bg_gray"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_mail"
                        android:padding="13dp"
                        android:background="@drawable/round_bg_gray"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/facebook"
                        android:padding="13dp"
                        android:background="@drawable/round_bg_gray"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/github"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/website"
                        android:padding="13dp"
                        android:background="@drawable/round_bg_gray"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/youtube"
                        android:padding="13dp"
                        android:background="@drawable/round_bg_gray"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>




            </LinearLayout>





        </LinearLayout>

    </ScrollView>

</RelativeLayout>